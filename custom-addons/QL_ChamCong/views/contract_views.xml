<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Định nghĩa form view để hiển thị chi tiết hợp đồng -->
    <record id="view_contract_form" model="ir.ui.view">
        <field name="name">contract.form</field>
        <field name="model">ql_nhanvien.contract</field>
        <field name="arch" type="xml">
            <form string="Hợp đồng lao động">
                <sheet>
                    <group>
                        <field name="contract_name" readonly="1"/>
                        <field name="employee_id"/>
                        <field name="contract_type"/>
                    </group>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="wage"/>
                    </group>
                    <group>
                        <field name="status" readonly="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Xác nhận" type="object" name="action_confirm_contract" class="btn-primary"
                            invisible = "status != 'draft'"
                            readonly ="status == 'done'"
                    />
                    <button string="Chấm dứt" type="object" name="action_terminate_contract" class="btn-secondary"
                           invisible="status != 'active'"/>
                    <button string="Đóng" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Danh sách các hợp đồng -->
    <record id="view_contract_tree" model="ir.ui.view">
        <field name="name">contract.tree</field>
        <field name="model">ql_nhanvien.contract</field>
        <field name="arch" type="xml">
            <tree string="Danh sách hợp đồng">
                <field name="contract_name"/>
                <field name="employee_id"/>
                <field name="contract_type"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="wage"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- Action để mở danh sách hợp đồng -->
    <record id="action_contract" model="ir.actions.act_window">
        <field name="name">Hợp đồng lao động</field>
         <field name="type">ir.actions.act_window</field>
        <field name="res_model">ql_nhanvien.contract</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu item để truy cập vào hợp đồng -->
        <menuitem id="menu_contract" name="Hợp đồng" action="action_contract" parent="menu_attendance_root"/>

</odoo>
